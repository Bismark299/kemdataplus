# ===========================================
# KEMDATAPLUS - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (Required)
# ===========================================
# PostgreSQL connection string
# For local: postgresql://user:password@localhost:5432/kemdataplus
# For hosted (Supabase, Neon, Railway, etc.): Get from provider
DATABASE_URL="postgresql://user:password@localhost:5432/kemdataplus?schema=public"

# ===========================================
# SECURITY (Required - CHANGE IN PRODUCTION!)
# ===========================================
# JWT Secret - Use a long random string (32+ characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-in-production-minimum-32-characters"
JWT_EXPIRES_IN="7d"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS in production)
FRONTEND_URL="https://your-domain.com"

# ===========================================
# ADMIN DEFAULTS (Change after first login!)
# ===========================================
ADMIN_EMAIL="admin@kemdataplus.com"
ADMIN_PASSWORD="ChangeThisPassword123!"

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================
# Mobile Money API (if integrating)
MOMO_API_KEY=""
MOMO_API_SECRET=""
MOMO_CALLBACK_URL=""

# SMS Gateway (if integrating)
SMS_API_KEY=""
SMS_SENDER_ID=""
